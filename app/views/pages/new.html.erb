<%= form_tag '/people', method: :post do %>
<div>
	<%= label_tag :first_name %>
	<%= text_field_tag :first_name %>
</div>
<div>
	<%= label_tag :last_name %>
	<%= text_field_tag :last_name %>
</div>
<div>
	<%= label_tag :email %>
	<%= text_field_tag :email %>
</div>
<div>
	<%= submit_tag 'DO IT!' %>
</div>
<% end %>